import React from 'react';
import { useTranslation } from 'react-i18next';

const languages = ['en', 'zh', 'hi', 'es', 'ar', 'fr', 'bn', 'pt', 'ru', 'ur', 'id', 'de', 'ja', 'pcm', 'mr', 'te', 'tr', 'ta', 'yue', 'vi', 'ko', 'tl', 'fa', 'ha', 'arz', 'jv', 'it', 'th', 'gu', 'pl']; // Codes for top 30

const Settings = ({ setShowSettings, setDarkMode, darkMode, i18n }) => {
  const { t } = useTranslation();

  return (
    <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center">
      <div className="bg-white dark:bg-gray-800 p-6 rounded-lg">
        <h2 className="text-lg mb-4">{t('settings')}</h2>
        <label className="block mb-2">
          {t('language')}:
          <select onChange={(e) => i18n.changeLanguage(e.target.value)} defaultValue={i18n.language} className="ml-2">
            {languages.map(lang => <option key={lang} value={lang}>{lang.toUpperCase()}</option>)}
          </select>
        </label>
        <label className="block mb-4">
          {t('darkMode')}:
          <input type="checkbox" checked={darkMode} onChange={() => setDarkMode(!darkMode)} className="ml-2" />
        </label>
        <button onClick={() => setShowSettings(false)} className="bg-blue-500 text-white px-4 py-2 rounded">{t('close')}</button>
      </div>
    </div>
  );
};

export default Settings;
